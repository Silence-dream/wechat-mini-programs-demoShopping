/* 轮播图 */
.index-swiper swiper {
  width: 750rpx;
  height: 340rpx;
}

.index-swiper image {
  width: 100%;
}

/* 导航 */
.index-cate {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  padding: 20rpx;
}

.index-cate navigator {
  -webkit-box-flex: 1;
      -ms-flex: 1;
          flex: 1;
}

.index-cate image {
  width: 100%;
}

/* 楼层 */
.index-floor .floor-title {
  padding: 10rpx;
}

.index-floor .floor-title image {
  width: 100%;
}

.index-floor .floor-conent {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
}

.index-floor .floor-conent .floor-conent-left {
  -webkit-box-flex: 1;
      -ms-flex: 1;
          flex: 1;
}

.index-floor .floor-conent .floor-conent-left image {
  width: 100%;
}

.index-floor .floor-conent .floor-conent-right {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-flex: 2;
      -ms-flex: 2;
          flex: 2;
  -ms-flex-wrap: wrap;
      flex-wrap: wrap;
}

.index-floor .floor-conent .floor-conent-right navigator {
  -webkit-box-flex: 1;
      -ms-flex: 1;
          flex: 1;
  -ms-flex-preferred-size: 50%;
      flex-basis: 50%;
  height: 50%;
}

.index-floor .floor-conent .floor-conent-right navigator:nth-child(-n + 2) {
  border-bottom: 10rpx solid #ffffff;
}

.index-floor .floor-conent .floor-conent-right navigator:nth-child(-n + 4) {
  border-left: 10rpx solid #ffffff;
}

.index-floor .floor-conent .floor-conent-right image {
  width: 100%;
  height: 100%;
}
